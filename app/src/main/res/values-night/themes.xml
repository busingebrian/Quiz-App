<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.QuizApp" parent="Theme.MaterialComponents">
        <!-- Customize your dark theme here. -->
        <!--   primary brand color   -->
        <item name="colorPrimary">@color/white</item>
        <item name="colorPrimaryVariant">@color/Dark_Purple</item>
        <item name="colorOnPrimary">@color/Lavente</item>

        <!--   secondary brand color   -->

        <item name="colorSecondary">@color/Dark_Purple</item>
        <item name="colorOnSecondary">@color/Dark_Purple</item>
        <item name="colorSecondaryVariant">@color/Mate</item>

        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
        <!--  nav bar-->
        <item name="android:navigationBarColor">@color/Dark_Purple</item>
        <!-- Action bar  -->

    </style>

    <style name="Theme.QuizApp.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="android:windowFullscreen">true</item>
        <!--  nav bar-->
        <item name="android:navigationBarColor">@color/Dark_Purple</item>
    </style>
</resources>